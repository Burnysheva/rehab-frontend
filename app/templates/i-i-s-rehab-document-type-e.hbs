<h3 class="ui header">{{t "forms.i-i-s-rehab-document-type-e.caption"}}</h3>

<form class="ui form flexberry-vertical-form" role="form">
  {{flexberry-error error=error}}
  <div class="field">
    <div class="flexberry-edit-panel">
      {{#unless readonly}}
        <button class="ui button save-button" {{action "save"}}>
          {{t "forms.edit-form.save-button-text"}}
        </button>
        {{#unless model.isNew}}
          <button class="ui button save-del-button" {{action "delete"}}>
            {{t "forms.edit-form.delete-button-text"}}
          </button>
        {{/unless}}
      {{/unless}}
      <button class="ui button close-button" {{action "close"}}>
        {{t "forms.edit-form.close-button-text"}}
      </button>
    </div>
  </div>
  <div class="field flexberry-validationsummary-container">
    <div class="sixteen wide">
      {{flexberry-validationsummary errors=(v-get validationObject "messages")}}
    </div>
  </div>
  <div class="field">
    {{flexberry-field
      readonly=readonly
      value=model.name
      class=(if (v-get validationObject "name" "isInvalid") "error")
      label=(t "forms.i-i-s-rehab-document-type-e.name-caption")
      data-test-i-i-s-rehab-document-type-e-----=true
    }}
    {{flexberry-validationmessage error=(v-get validationObject "name" "messages")}}
  </div>
  <div class="field">
    <label>{{t "forms.i-i-s-rehab-document-type-e.relevance-caption"}}</label>
    {{flexberry-checkbox
      readonly=readonly
      value=model.relevance
      data-test-i-i-s-rehab-document-type-e----------=true
    }}
    {{flexberry-validationmessage error=(v-get validationObject "relevance" "messages")}}
  </div>

  <div class="field">
    {{flexberry-field
      readonly=readonly
      value=model.code
      class=(if (v-get validationObject "code" "isInvalid") "error")
      label=(t "forms.i-i-s-rehab-document-type-e.code-caption")
      data-test-i-i-s-rehab-document-type-e-----=true
    }}
    {{flexberry-validationmessage error=(v-get validationObject "code" "messages")}}
  </div>
</form>