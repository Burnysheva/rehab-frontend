<h3 class="ui header">{{t "forms.i-i-s-rehab-house-e.caption"}}</h3>

<form class="ui form flexberry-vertical-form" role="form">
  {{flexberry-error error=error}}
  <div class="field">
    <div class="flexberry-edit-panel">
      {{#unless readonly}}
        <button class="ui button save-button" {{action "save"}}>
          {{t "forms.edit-form.save-button-text"}}
        </button>
        {{#unless model.isNew}}
          <button class="ui button save-del-button" {{action "delete"}}>
            {{t "forms.edit-form.delete-button-text"}}
          </button>
        {{/unless}}
      {{/unless}}
      <button class="ui button close-button" {{action "close"}}>
        {{t "forms.edit-form.close-button-text"}}
      </button>
    </div>
  </div>
  <div class="field flexberry-validationsummary-container">
    <div class="sixteen wide">
      {{flexberry-validationsummary errors=(v-get validationObject "messages")}}
    </div>
  </div>
  <div class="field">
    {{flexberry-field
      readonly=readonly
      value=model.addressString
      class=(if (v-get validationObject "addressString" "isInvalid") "error")
      label=(t "forms.i-i-s-rehab-house-e.addressString-caption")
      data-test-i-i-s-rehab-house-e--------------=true
    }}
    {{flexberry-validationmessage error=(v-get validationObject "addressString" "messages")}}
  </div>
  <div class="field">
    {{flexberry-field
      readonly=readonly
      value=model.city
      class=(if (v-get validationObject "city" "isInvalid") "error")
      label=(t "forms.i-i-s-rehab-house-e.city-caption")
      data-test-i-i-s-rehab-house-e-----=true
    }}
    {{flexberry-validationmessage error=(v-get validationObject "city" "messages")}}
  </div>
  <div class="field">
    {{flexberry-field
      readonly=readonly
      value=model.street
      class=(if (v-get validationObject "street" "isInvalid") "error")
      label=(t "forms.i-i-s-rehab-house-e.street-caption")
      data-test-i-i-s-rehab-house-e-------=true
    }}
    {{flexberry-validationmessage error=(v-get validationObject "street" "messages")}}
  </div>
  <div class="field">
    {{flexberry-field
      readonly=readonly
      value=model.number
      class=(if (v-get validationObject "number" "isInvalid") "error")
      label=(t "forms.i-i-s-rehab-house-e.number-caption")
      data-test-i-i-s-rehab-house-e-------=true
    }}
    {{flexberry-validationmessage error=(v-get validationObject "number" "messages")}}
  </div>
</form>